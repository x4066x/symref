{
  "name": "ai-code-static-checker",
  "version": "0.1.3",
  "description": "Static code checker for AI code agents (Windsurf, Cline, etc.)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ai-code-check": "./dist/cli.js"
  },
  "scripts": {
    "analyze": "ts-node --project tsconfig.json cli.ts",
    "build": "tsc && echo '#!/usr/bin/env node' > dist/cli.tmp.js && cat dist/cli.js >> dist/cli.tmp.js && mv dist/cli.tmp.js dist/cli.js",
    "postbuild": "chmod +x ./dist/cli.js",
    "prepare": "npm run build",
    "test": "jest"
  },
  "keywords": [
    "static-analysis",
    "typescript",
    "ai",
    "code-analysis",
    "windsurf",
    "cline"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/x4066x/ai-code-static-checker.git"
  },
  "homepage": "https://github.com/x4066x/ai-code-static-checker#readme",
  "bugs": {
    "url": "https://github.com/x4066x/ai-code-static-checker/issues"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.3.0",
    "ts-morph": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "@types/fs-extra": "^11.0.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
